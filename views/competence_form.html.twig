{% extends 'layout.html.twig' %}
{% set adminMenu = true %}

{% block title %}{{ title }}{% endblock %}

{% block content %}
  <h2 class="text-center">{{ block('title') }}</h2>
  {% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success">
        {{ flashMessage }}
    </div>
  {% endfor %}

  <div class="well">
    {{ form_start( competenceForm, { 'attr': {'class': 'form-horizontal'} }) }}
      <div class="form-group">
        {{ form_label(competenceForm.nom, null, { 'label_attr':  {
              'class': 'col-sm-4 control-label'
        }}) }}
        <div class="col-sm-6">
          {{ form_errors(competenceForm.nom) }}
          {{ form_widget(competenceForm.nom, { 'attr':  {
            'class': 'form-control'
          }}) }}
        </div>
      </div>

      <div class="form-group">
          {{ form_label(competenceForm.valeur, null, { 'label_attr':  {
              'class': 'col-sm-4 control-label'
          }}) }}
          <div class="col-sm-6">
              {{ form_errors(competenceForm.valeur) }}
              {{ form_widget(competenceForm.valeur, { 'attr':  {
                  'class': 'form-control'
              }}) }}
          </div>
      </div>
      <div class="form-group">
          {{ form_label(competenceForm.logo, null, { 'label_attr':  {
              'class': 'col-sm-4 control-label'
          }}) }}
          <div class="col-sm-6">
              {{ form_errors(competenceForm.logo) }}
              {{ form_widget(competenceForm.logo, { 'attr':  {
                  'class': 'form-control'
              }}) }}
          </div>
      </div>
      <div class="form-group">
          {{ form_label(competenceForm.categorie, null, { 'label_attr':  {
              'class': 'col-sm-4 control-label'
          }}) }}
          <div class="col-sm-6">
              {{ form_errors(competenceForm.categorie) }}
              {{ form_widget(competenceForm.categorie, { 'attr':  {
                  'class': 'form-control'
              }}) }}
          </div>
      </div>

  </div>
      <div class="form-group">
          <div class="col-sm-offset-4 col-sm-3">
              <input type="submit" class="btn btn-primary" value="Save" />
          </div>
      </div>
  {{ form_end( competenceForm ) }}
  </div>
{% endblock %}
