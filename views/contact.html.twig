{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
  <h1>Contact</h1>
  {% for contact in contacts %}
    <article>
        <h2><a class="articleTitle" href="{{ path('contact', { 'id': contact.id }) }}">{{contact.nom }}</a></h2>
        <p>{{ contact.content }}</p>
    </article>
  {% endfor %}

{% endblock %}

{% block content %}

  <h1 class="row col-md-12">Contact</h1>
    {% if contactForm %}
	{{ form_start(contactForm) }}
	
	<label>Pr√©nom : </label>
	{{ form_errors(contactForm.prenom) }}
    {{ form_widget(contactForm.prenom) }}
	
	<label>Nom : </label>
	{{ form_errors(contactForm.nom) }}
    {{ form_widget(contactForm.nom) }}
	
	<label>Email : </label>
	{{ form_errors(contactForm.email) }}
    {{ form_widget(contactForm.email) }}
	
	
	

	<label>Message : </label>
	{{ form_errors(contactForm.message) }}
    {{ form_widget(contactForm.message) }}
	
	<input type="submit" value="Envoyer l'email" />
	{{ form_end(contactForm) }}  
	{% endif %}  

	
	
	
	
{% endblock %}