                              <li class="{% if adminMenu is defined %}active{% endif %}"><a href="{{ path('admin') }}"><span class="glyphicon glyphicon-cog"></span> Espace Admin</a></li>
                          {% else %}
                              <li class="dropdown">
                              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
